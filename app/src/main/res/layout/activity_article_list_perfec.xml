<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD1F1"
    tools:context=".Article_list_perfec">

    <TextView
        android:id="@+id/textViewa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="174dp"
        android:text="Articles help you to deal with perfectionism"
        android:textColor="#7E57C1"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttona1"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="143dp"
        android:text="Article 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewa" />

    <Button
        android:id="@+id/buttona2"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="143dp"
        android:text="Article 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttona1" />

    <Button
        android:id="@+id/buttona3"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="143dp"
        android:text="Article 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttona2" />

    <Button
        android:id="@+id/buttona4"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="143dp"
        android:text="Article 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttona3" />
</androidx.constraintlayout.widget.ConstraintLayout>